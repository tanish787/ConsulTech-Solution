{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "src",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
